#!/usr/bin/make -f

export INSTALL_MOD_DIR:=extra

KVERSION   ?= $(shell uname -r)
KERNEL_SRC :=  /lib/modules/$(KVERSION)
MOD_SRC_DIR:= $(shell pwd)
MODULE_DIRS:= midstone-200i silverstone-x midstone-100x
X509_DIR   := /sonic/src/sonic-linux-kernel/x509/
%:
	dh $@

override_dh_auto_build:
	(for mod in $(MODULE_DIRS); do \
		make -C $(KERNEL_SRC)/build M=$(MOD_SRC_DIR)/$${mod}/modules; \
		cd $(MOD_SRC_DIR)/$${mod}; \
		python2.7 setup.py bdist_wheel -d $(MOD_SRC_DIR)/$${mod}/modules; \
		cd $(MOD_SRC_DIR); \
	done)

override_dh_auto_install:
	(for mod in $(MODULE_DIRS); do \
		dh_installdirs -pplatform-modules-$${mod} \
			$(KERNEL_SRC)/$(INSTALL_MOD_DIR); \
		for module in  $(MOD_SRC_DIR)/$$mod/modules/*.ko; do \
			 $(X509_DIR)/sign-file sha256 $(X509_DIR)/rsa_private.pem $(X509_DIR)/cert.pem $$module; \
		done; \
		cp $(MOD_SRC_DIR)/$${mod}/modules/*.ko \
			debian/platform-modules-$${mod}/$(KERNEL_SRC)/$(INSTALL_MOD_DIR); \
	done)

override_dh_usrlocal:

override_dh_clean:
	dh_clean
	(for mod in $(MODULE_DIRS); do \
		make -C $(KERNEL_SRC)/build M=$(MOD_SRC_DIR)/$${mod}/modules clean; \
	done)
